@model IEnumerable<CarParts.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-outline-primary btn-lg mb-2" asp-action="Create">دور جديد <i class="fas fa-plus"></i></a>

@if (Model.Count() == 0)
{


    <div class="alert alert-info">
        لا يوجد ادوار للمستخدمين بعد
    </div>
}
else
{
    <div class="alert alert-info">
        جميع الادوار
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-borderless">
            <thead>
                <tr class="text-info">
                    <th>الدور</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>
                            @role.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

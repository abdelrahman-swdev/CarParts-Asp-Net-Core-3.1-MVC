@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> userManager
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>رينو جمال البدري</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.min.css" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand cairo-font-xbold" asp-controller="Home" asp-action="Index">رينو جمال البدري <img src="~/images/renault-logo.jpg" class="logo-img" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link cairo-font-regular" aria-current="page" asp-controller="Home" asp-action="Index">الرئيسية</a>
                        </li>

                        @if (User.IsInRole("مسؤول"))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle cairo-font-regular" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    قائمة المهام
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item cairo-font-bold text-secondary" asp-controller="Admin" asp-action="ListUsers">المستخدمين <i class="fas fa-users"></i></a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item cairo-font-bold text-secondary" asp-controller="Products" asp-action="Index">المنتجات <i class="fas fa-store"></i></a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item cairo-font-bold text-secondary" asp-controller="Roles" asp-action="Index">الادوار <i class="fas fa-user-tag"></i></a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                    <form class="d-flex" asp-controller="Home" asp-action="Search" method="post">
                        <input class="form-control me-2" type="search" name="searchQuery" placeholder="بتدور على ايه ؟">
                        <button class="btn btn-outline-success me-2 cairo-font-bold" type="submit">بحث</button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:15px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/font-awesome/js/all.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>
</html>
